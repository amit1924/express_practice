<%- include('partials/header', { title: 'Login' }) %>
<div class="flex flex-col items-center justify-center h-screen">
  <h1 class="text-3xl mb-4">Login</h1>
  <form action="/login" method="POST" class="w-full max-w-sm">
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="email">Email</label>
      <input name="email" type="email" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
    </div>
    <div class="mb-6">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="password">Password</label>
      <input name="password" type="password" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
    </div>
    <div class="flex items-center justify-between">
      <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Login</button>
    </div>
  </form>
  <p class="mt-4">Don't have an account? <a href="/register" class="text-blue-500">Register</a></p>
</div>
<%- include('partials/footer') %>
